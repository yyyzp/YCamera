    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.opengl.opengltest.CameraView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <com.opengl.opengltest.widget.CircularProgressView
        android:id="@+id/mCapture"
