<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WatchView">
        <attr name="watchViewState" format="boolean" />
        <attr name="watchViewImgResNormal" format="reference" />
        <attr name="watchViewImgResPress" format="reference" />
        <attr name="watchViewTextNormal" format="reference|string" />
        <attr name="watchViewTextPress" format="reference|string" />
        <attr name="watchViewBgNormal" format="reference" />
        <attr name="watchViewBgPress" format="reference" />
        <attr name="watchViewSpacing" format="dimension" />

    </declare-styleable>

    <declare-styleable name="BubbleLayout">
        <attr name="bubble_strokeWidth" format="dimension" />
        <attr name="bubble_cornerRadius" format="dimension" />
        <attr name="bubble_bubbleWidth" format="dimension" />
        <attr name="bubble_bubbleHeight" format="dimension" />
        <attr name="bubble_bubbleHOffset" format="dimension" />
        <attr name="bubble_color" format="color" />
    </declare-styleable>
    <declare-styleable name="RotateAnimateView">
        <attr name="mv_background" format="reference" />
    </declare-styleable>
    <!--普通卷尺控件-->
    <declare-styleable name="RuleView">
        <!--背景色-->
        <attr name="zjun_bgColor" />
        <!--刻度颜色-->
        <attr name="zjun_gradationColor" />
        <!--短刻度线宽度-->
        <attr name="gv_shortLineWidth" format="reference|dimension" />
        <!--长刻度线宽度-->
        <attr name="gv_longLineWidth" format="reference|dimension" />
        <!--短刻度长度-->
        <attr name="gv_shortGradationLen" format="reference|dimension" />
        <!--长刻度长度-->
        <attr name="gv_longGradationLen" format="reference|dimension" />
        <!--刻度字体颜色-->
        <attr name="zjun_textColor" />
        <!--刻度字体大小-->
        <attr name="zjun_textSize" />
        <!--中间指针线颜色-->
        <attr name="zjun_indicatorLineColor" />
        <!--中间指针线宽度-->
        <attr name="zjun_indicatorLineWidth" />
        <!--中间指针线长度-->
        <attr name="gv_indicatorLineLen" format="reference|dimension" />
        <!--最小值-->
        <attr name="gv_minValue" format="reference|float" />
        <!--最大值-->
        <attr name="gv_maxValue" format="reference|float" />
        <!--当前值-->
        <attr name="gv_currentValue" format="reference|float" />
        <!--刻度最小单位-->
        <attr name="gv_gradationUnit" format="reference|float" />
        <!--需要绘制数值之间的最小单位个数-->
        <attr name="gv_numberPerCount" format="reference|integer" />
        <!--刻度间距离-->
        <attr name="gv_gradationGap" format="reference|dimension" />
        <!--刻度与文字的间距-->
        <attr name="gv_gradationNumberGap" format="reference|dimension" />
    </declare-styleable>


    <declare-styleable name="HorizontalIndicatorView">
        <!--可见数目-->
        <attr name="SeeSize" format="integer"></attr>
        <!--默认文字大小和颜色-->
        <attr name="TextSize" format="float"></attr>
        <attr name="TextColor" format="color|reference"></attr>
        <!--选中大小和颜色-->
        <attr name="SelectedTextSize" format="float"></attr>
        <attr name="SelectedTextColor" format="color|reference"></attr>
    </declare-styleable>

</resources>